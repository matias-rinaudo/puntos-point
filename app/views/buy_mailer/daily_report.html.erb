<div style="overflow-x:auto;">
    <table style="border-collapse: collapse; border-spacing: 0; width: 100%; border: 1px solid #ddd;">
        <thead>
            <tr style="background-color: #f2f2f2">
                <th style="text-align: left; padding: 4px;">Producto</th>
                <th style="text-align: left; padding: 4px;">Compras realizadas</th>
            </tr>
        </thead>
        <tbody>
            <% @products.map do |product| %>
                <tr style="background-color: #f2f2f2">
                    <td style="text-align: left; padding: 4px;"><%= Product.find(product[0]).name %></td>
                    <td style="text-align: left; padding: 4px;"><%= product[1] %></td>
                </tr>
            <% end %>   
        </tbody>
    </table>
</div>